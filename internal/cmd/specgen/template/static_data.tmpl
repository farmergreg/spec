{{- define "static_data" }}

// A map of all {{ .DataType }} specifications.
// For convenience, this data is mutable.
// If you require immutable data, please use the specdata package.
var {{ .DataType }}Map = map[{{ .DataType }}]Spec {
{{- range $key, $value := .Records }}
	{{ $.ConstPrefix }}{{ ToGoIdentifier $key.String }}: {{ ToGoCode $value $.PackageName }},
{{- end }}
}

// All {{ .DataType }} specifications including depreciated and import only.
// For convenience, this data is mutable.
// If you require immutable data, please use the specdata package.
var {{ .DataType }}ListAll = []Spec {
{{- range $key, $value := .Records }}
	{{ $.DataType }}Map[{{ $.ConstPrefix }}{{ ToGoIdentifier $key.String }}],
{{- end }}
}

// All {{ .DataType }} specifications values that are NOT marked import-only.
// For convenience, this data is mutable.
// If you require immutable data, please use the specdata package.
var {{ .DataType }}ListCurrent = []Spec {
{{- range $key, $value := .Records }}
{{- if not $value.IsImportOnly }}
	{{ $.DataType }}Map[{{ $.ConstPrefix }}{{ ToGoIdentifier $key.String }}],
{{- end }}
{{- end }}
}
{{- end }}

